<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/RUPizzeriaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/alegreya"
        android:text="@string/ru_pizzeria"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="105dp"
        android:layout_marginTop="88dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RUPizzeriaLabel">

        <ImageButton
            android:id="@+id/CStyleIcon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/order_pizzas"
            android:drawablePadding="-15sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/chicagopizzaimage" />

        <TextView
            android:id="@+id/order_pizzas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/alegreya"
            android:text="@string/order_pizzas"
            android:textAlignment="center"
            android:textSize="24sp"
            android:translationY="40dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="395dp"
        android:layout_height="94dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageButton
            android:id="@+id/currentOrderIcon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:contentDescription="@string/view_current_order"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/shoppingcart" />

        <TextView
            android:id="@+id/view_current_order"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:fontFamily="@font/alegreya"
            android:text="@string/view_current_order"
            android:textAlignment="center"
            android:textSize="24sp"
            android:translationY="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="396dp"
        android:layout_height="90dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <ImageButton
            android:id="@+id/ordersIcon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:contentDescription="@string/view_current_order"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ordersplacedpizzeria" />

        <TextView
            android:id="@+id/view_all_orders"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:fontFamily="@font/alegreya"
            android:text="@string/view_all_orders"
            android:textAlignment="center"
            android:textSize="24sp"
            android:translationY="25dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>