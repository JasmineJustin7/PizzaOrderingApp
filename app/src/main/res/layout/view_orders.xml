<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5EBEF">

    <LinearLayout
        android:id="@+id/headerVO"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#8B0000"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/header_titleVO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="Placed Orders"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/white"
            android:textSize="24sp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerVO"
        tools:layout_editor_absoluteX="39dp">


        <TextView
            android:id="@+id/ordernumtextView"
            android:layout_width="76dp"
            android:layout_height="29dp"
            android:text="Order#"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="102dp"
            tools:layout_editor_absoluteY="-1dp" />

        <Spinner
            android:id="@+id/orderNumSpinner"
            android:layout_width="113dp"
            android:layout_height="28dp"
            tools:layout_editor_absoluteX="179dp"
            tools:layout_editor_absoluteY="-1dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="866dp"
        android:layout_height="201dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="130dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/viewOrdersRecycler"
            android:layout_width="406dp"
            android:layout_height="196dp"
            android:backgroundTint="#FFFFFF"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="-1dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/cancelOrderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#8B0000"
        android:onClick="cancelOrder"
        android:text="Cancel Order"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="341dp" />

</androidx.constraintlayout.widget.ConstraintLayout>